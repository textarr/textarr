# ===========================================
# Textarr Configuration
# ===========================================

# ------------------------------------------
# Server
# ------------------------------------------
PORT=3030
NODE_ENV=development
LOG_LEVEL=info

# ------------------------------------------
# AI Configuration
# ------------------------------------------
# Provider: "openai" or "anthropic"
AI_PROVIDER=openai
# Model name (e.g., gpt-4-turbo, claude-3-opus-20240229)
AI_MODEL=gpt-4-turbo

# API Keys (only need the one for your chosen provider)
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ------------------------------------------
# Twilio Configuration
# ------------------------------------------
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_PHONE_NUMBER=+1234567890

# ------------------------------------------
# Sonarr Configuration (TV Shows)
# ------------------------------------------
SONARR_URL=http://localhost:8989
SONARR_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SONARR_QUALITY_PROFILE_ID=1
SONARR_ROOT_FOLDER=/tv

# ------------------------------------------
# Radarr Configuration (Movies)
# ------------------------------------------
RADARR_URL=http://localhost:7878
RADARR_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
RADARR_QUALITY_PROFILE_ID=1
RADARR_ROOT_FOLDER=/movies

# ------------------------------------------
# Security
# ------------------------------------------
# Comma-separated list of phone numbers allowed to make requests
# Use E.164 format (e.g., +1234567890)
ALLOWED_PHONE_NUMBERS=+1234567890,+0987654321

# ------------------------------------------
# Session Settings
# ------------------------------------------
# Session timeout in milliseconds (default: 5 minutes)
SESSION_TIMEOUT_MS=300000
# Maximum search results to show user
MAX_SEARCH_RESULTS=5

# ------------------------------------------
# Cloudflare Tunnel (Optional)
# ------------------------------------------
# Token from Cloudflare Zero Trust dashboard
# Used for secure webhook access without opening ports
# CLOUDFLARE_TUNNEL_TOKEN=your-tunnel-token-here
